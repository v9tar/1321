-- زر تبديل الواجهة الذكي
local ToggleUI = Instance.new("TextButton")
ToggleUI.Name = "ToggleUI"
ToggleUI.Size = UDim2.new(0, 100, 0, 40)
ToggleUI.Position = UDim2.new(0.5, -50, 1, -50)
ToggleUI.Text = L.CloseUI
ToggleUI.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
ToggleUI.TextColor3 = Color3.new(1, 1, 1)
ToggleUI.Font = Enum.Font.GothamBold
ToggleUI.Parent = Gui

-- تحديث أداء اللعبة
local function UpdatePerformance()
    local fps = math.floor(1 / RunService.RenderStepped:Wait())
    local ping = math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue())
    
    FPSLabel.Text = "FPS: " .. fps
    PingLabel.Text = "Ping: " .. ping .. "ms"
    
    -- تغيير لون FPS حسب الأداء
    if fps < 30 then
        FPSLabel.TextColor3 = Color3.fromRGB(255, 50, 50)
    elseif fps < 60 then
        FPSLabel.TextColor3 = Color3.fromRGB(255, 165, 0)
    else
        FPSLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    end
    
    -- تغيير لون Ping حسب الأداء
    if ping > 300 then
        PingLabel.TextColor3 = Color3.fromRGB(255, 50, 50)
    elseif ping > 150 then
        PingLabel.TextColor3 = Color3.fromRGB(255, 165, 0)
    else
        PingLabel.TextColor3 = Color3.fromRGB(0, 200, 255)
    end
end

-- تبديل إظهار/إخفاء الواجهة
local function ToggleUIVisibility()
    UIVisible = not UIVisible
    MainFrame.Visible = UIVisible
    ToggleUI.Text = UIVisible and L.CloseUI or L.OpenUI
end

-- أحداث الأزرار
ToggleUI.MouseButton1Click:Connect(ToggleUIVisibility)

-- تحديث الأداء بانتظام
RunService.RenderStepped:Connect(UpdatePerformance)

print("تم تحميل سكربت D88 النهائي بنجاح!")
