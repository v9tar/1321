--[[
  J3OYX1 ULTIMATE V7  
  Left Side GUI - 6 Buttons - 500+ Enhancements  
--]]

local Player = game:GetService("Players").LocalPlayer  
local TweenService = game:GetService("TweenService")  
local RunService = game:GetService("RunService")  
local UIS = game:GetService("UserInputService")  

-- ██████  GODLY CORE ██████ --  
local GUI = Instance.new("ScreenGui")  
GUI.Name = "J3_EliteUI"  
GUI.ResetOnSpawn = false  
GUI.DisplayOrder = 9999  

local MainFrame = Instance.new("Frame")  
MainFrame.Size = UDim2.new(0, 170, 0, 300)  
MainFrame.Position = UDim2.new(0, 10, 0.5, -150)  -- Left Side  
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)  
MainFrame.BorderSizePixel = 0  
MainFrame.ClipsDescendants = true  

-- ██████  DYNAMIC MOVEMENT SYSTEM ██████ --  
local dragging, dragInput, dragStart  
MainFrame.Active = true  
MainFrame.InputBegan:Connect(function(input)  
    if input.UserInputType == Enum.UserInputType.MouseButton1 then  
        dragging = true  
        dragStart = input.Position  
        input.Changed:Connect(function()  
            if input.UserInputState == Enum.UserInputState.End then  
                dragging = false  
            end  
        end)  
    end  
end)  

MainFrame.InputChanged:Connect(function(input)  
    if input.UserInputType == Enum.UserInputType.MouseMovement then  
        dragInput = input  
    end  
end)  

UIS.InputChanged:Connect(function(input)  
    if dragging and input == dragInput then  
        local delta = input.Position - dragStart  
        MainFrame.Position = UDim2.new(  
            0, delta.X + MainFrame.Position.X.Offset,  
            0.5, -150 + delta.Y  
        )  
    end  
end)  

-- ██████  KILLER BUTTONS SYSTEM ██████ --  
local buttonConfigs = {  
    {Text = "GHOST WORLD", Action = "Ghost", Color = Color3.fromRGB(255, 40, 40)},  
    {Text = "GOD AFK", Action = "AntiAFK", Color = Color3.fromRGB(40, 255, 40)},  
    {Text = "FLY ENGINE", Action = "Fly", Color = Color3.fromRGB(40, 40, 255)},  
    {Text = "SPEED BOOST", Action = "Speed", Color = Color3.fromRGB(255, 0, 255)},  
    {Text = "TELEPORT", Action = "Teleport", Color = Color3.fromRGB(255, 255, 0)},  
    {Text = "DESTROY", Action = "Destroy", Color = Color3.fromRGB(0, 255, 255)}  
}  

local buttons = {}  
for i, config in ipairs(buttonConfigs) do  
    local btn = Instance.new("TextButton")  
    btn.Size = UDim2.new(0, 150, 0, 40)  
    btn.Position = UDim2.new(0, 10, 0, 10 + ((i-1)*45))  
    btn.Text = config.Text  
    btn.TextColor3 = config.Color  
    btn.BackgroundTransparency = 0.9  
    btn.TextSize = 13  
    btn.Font = Enum.Font.GothamBlack  
    btn.Parent = MainFrame  

    btn.MouseButton1Click:Connect(function()  
        HandleAction(config.Action)  
    end)  
    table.insert(buttons, btn)  
end  

-- ██████  HYPER FUNCTIONS ██████ --  
local States = {  
    Ghost = false,  
    Flying = false,  
    AFK = false,  
    Speed = false  
}  

function HandleAction(action)  
    pcall(function()  
        if action == "Ghost" then  
            States.Ghost = not States.Ghost  
            for _, part in pairs(workspace:GetDescendants()) do  
                if part:IsA("BasePart") then  
                    part.Transparency = States.Ghost and 1 or 0  
                    part.CanCollide = not States.Ghost  
                end  
            end  

        elseif action == "AntiAFK" then  
            States.AFK = not States.AFK  
            if States.AFK then  
                coroutine.wrap(function()  
                    while States.AFK do  
                        wait(30)  
                        game:GetService("ReplicatedStorage").MainEvent:FireServer("Update")  
                    end  
                end)()  
            end  

        elseif action == "Fly" then  
            States.Flying = not States.Flying  
            local root = Player.Character.HumanoidRootPart  
            if States.Flying then  
                local bodyVelocity = Instance.new("BodyVelocity")  
                bodyVelocity.Velocity = Vector3.new(0,0,0)  
                bodyVelocity.Parent = root  
                RunService.Heartbeat:Connect(function()  
                    root.Velocity = Vector3.new(0,0,0)  
                    if UIS:IsKeyDown(Enum.KeyCode.Space) then  
                        root.CFrame += Vector3.new(0,2,0)  
                    end  
                end)  
            else  
                root.BodyVelocity:Destroy()  
            end  

        elseif action == "Speed" then  
            States.Speed = not States.Speed  
            Player.Character.Humanoid.WalkSpeed = States.Speed and 100 or 16  

        elseif action == "Teleport" then  
            local target = game.Players:GetPlayers()[math.random(1, #game.Players:GetPlayers())]  
            Player.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame  

        elseif action == "Destroy" then  
            GUI:Destroy()  
        end  
    end)  
end  

-- ██████  FINAL ACTIVATION ██████ --  
MainFrame.Parent = GUI  
GUI.Parent = game:GetService("CoreGui")  
