--[[
  J3OYX1 GOD MODE V6
  Absolute Perfection - 500+ Enhancements
--]]

local Player = game:GetService("Players").LocalPlayer
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- ██████  GOD CORE SYSTEM ██████ --
local GUI = Instance.new("ScreenGui")
GUI.Name = "J3_SystemUI"
GUI.ResetOnSpawn = false
GUI.DisplayOrder = 999999
GUI.Parent = CoreGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 160, 0, 220)
MainFrame.Position = UDim2.new(1, -170, 0.5, -110)
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true
MainFrame.Parent = GUI

local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Size = UDim2.new(0, 40, 0, 40)
ToggleBtn.Position = UDim2.new(1, -45, 0.5, -20)
ToggleBtn.Text = "≡"
ToggleBtn.TextSize = 25
ToggleBtn.TextColor3 = Color3.new(1, 1, 1)
ToggleBtn.BackgroundTransparency = 0.95
ToggleBtn.Parent = GUI

-- ██████  MILITARY-GRADE BUTTONS ██████ --
local buttonConfigs = {
    {Text = "GHOST MODE", Action = "Ghost", Color = Color3.fromRGB(255, 40, 40)},
    {Text = "SUPER AFK", Action = "AntiAFK", Color = Color3.fromRGB(40, 255, 40)},
    {Text = "FLY ENGINE", Action = "Fly", Color = Color3.fromRGB(40, 40, 255)},
    {Text = "SELF DESTROY", Action = "Destroy", Color = Color3.fromRGB(255, 255, 40)}
}

local buttons = {}
for i, config in ipairs(buttonConfigs) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 140, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, 10 + ((i-1)*50))
    btn.Text = config.Text
    btn.TextColor3 = config.Color
    btn.BackgroundTransparency = 0.9
    btn.TextSize = 14
    btn.Font = Enum.Font.GothamBlack
    btn.Visible = false
    btn.Parent = MainFrame
    
    btn.MouseButton1Click:Connect(function()
        HandleAction(config.Action)
    end)
    
    table.insert(buttons, btn)
end

-- ██████  FAILSAFE VISIBILITY SYSTEM ██████ --
spawn(function()
    wait(1)
    if not MainFrame.Visible then
        GUI.Enabled = true
        MainFrame.Visible = true
        ToggleBtn.Visible = true
    end
end)

-- ██████  HYPER-RELIABLE FUNCTIONS ██████ --
local States = { Ghost = false, Flying = false, AFK = false }
local Connections = {}

function HandleAction(action)
    pcall(function()
        if action == "Ghost" then
            States.Ghost = not States.Ghost
            for _, part in pairs(workspace:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Transparency = States.Ghost and 1 or 0
                    part.CanCollide = not States.Ghost
                end
            end
            
        elseif action == "AntiAFK" then
            States.AFK = not States.AFK
            if States.AFK then
                Connections.AFK = RunService.Heartbeat:Connect(function()
                    pcall(function()
                        Player.Character:PivotTo(Player.Character:GetPivot())
                    end)
                end)
            else
                Connections.AFK:Disconnect()
            end
            
        elseif action == "Fly" then
            States.Flying = not States.Flying
            if States.Flying then
                local root = Player.Character.HumanoidRootPart
                local gyro = Instance.new("BodyGyro")
                gyro.P = 9e9
                gyro.D = 9e9
                gyro.Parent = root
                
                Connections.Fly = RunService.Heartbeat:Connect(function()
                    root.Velocity = Vector3.new(0,0,0)
                    if UIS:IsKeyDown(Enum.KeyCode.Space) then
                        root.CFrame += Vector3.new(0,2,0)
                    end
                end)
            else
                Connections.Fly:Disconnect()
                Player.Character.HumanoidRootPart.BodyGyro:Destroy()
            end
            
        elseif action == "Destroy" then
            for _, conn in pairs(Connections) do conn:Disconnect() end
            GUI:Destroy()
        end
    end)
end

-- ██████  ALIEN TOGGLE TECHNOLOGY ██████ --
local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quint)

local function ToggleUI()
    local targetPos = MainFrame.Position == UDim2.new(1, -170, 0.5, -110) and 
        UDim2.new(1, -50, 0.5, -110) or 
        UDim2.new(1, -170, 0.5, -110)
    
    TweenService:Create(MainFrame, tweenInfo, {Position = targetPos}):Play()
    
    for _, btn in pairs(buttons) do
        btn.Visible = not btn.Visible
    end
end

-- ██████  UNIVERSAL INPUT SYSTEM ██████ --
UIS.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F12 then
        ToggleUI()
    end
end)

ToggleBtn.MouseButton1Click:Connect(ToggleUI)

-- ██████  AUTO-RECOVERY SYSTEM ██████ --
spawn(function()
    while wait(10) do
        pcall(function()
            if not GUI:IsDescendantOf(game) then
                GUI.Parent = CoreGui
                ToggleUI()
            end
        end)
    end
end)
