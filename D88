--[[ نظام التحكم الأساسي ]]
local ControlledPlayer = nil
local Debounce = false

-- نظام البحث المحسن
local function FindPlayer(name)
    name = name:lower():gsub("[^%w]", ""):sub(1, 20)
    if #name < 3 then return nil end
    
    local closestPlayer, minDiff = nil, math.huge
    
    for _, player in pairs(game:GetService("Players"):GetPlayers()) do
        if player ~= Player then
            local playerName = player.Name:lower():gsub("[^%w]", "")
            if playerName:find(name) then
                local diff = math.abs(#playerName - #name)
                if diff < minDiff then
                    closestPlayer = player
                    minDiff = diff
                end
            end
        end
    end
    
    return closestPlayer
end

-- نظام التحكم في القفز (إعادة بناء كاملة)
local JumpSystem = {
    OriginalSettings = {},
    
    -- دالة التحكم الأساسية
    Control = SecureFunction(function(target, state)
        if not target or not target.Character then return false end
        
        local humanoid = target.Character:FindFirstChildOfClass("Humanoid")
        if not humanoid then return false end
        
        -- حفظ الإعدادات الأصلية
        if not JumpSystem.OriginalSettings[target] then
            JumpSystem.OriginalSettings[target] = {
                JumpPower = humanoid.JumpPower,
                WalkSpeed = humanoid.WalkSpeed
            }
        end
        
        -- تطبيق التغييرات
        if state then
            humanoid.JumpPower = 0
            humanoid.WalkSpeed = 16
        else
            humanoid.JumpPower = JumpSystem.OriginalSettings[target].JumpPower or 50
            humanoid.WalkSpeed = JumpSystem.OriginalSettings[target].WalkSpeed or 16
        end
        
        return true
    end)
}

-- نظام القبول الإجباري (إعادة بناء كاملة)
local AcceptSystem = {
    ForceAccept = SecureFunction(function(target)
        if not target then return false end
        
        -- الطريقة الأولى: البحث عن RemoteEvents
        for _, remote in pairs(game:GetService("ReplicatedStorage"):GetDescendants()) do
            if remote:IsA("RemoteEvent") and remote.Name:lower():find("accept") then
                remote:FireServer(true)
                return true
            end
        end
        
        -- الطريقة الثانية: محاكاة النقر
        local virtualInput = game:GetService("VirtualInputManager")
        local mouse = game:GetService("Players").LocalPlayer:GetMouse()
        
        -- محاكاة نقر الماوس
        virtualInput:SendMouseButtonEvent(mouse.X, mouse.Y, 0, true, game, 1)
        wait(0.1)
        virtualInput:SendMouseButtonEvent(mouse.X, mouse.Y, 0, false, game, 1)
        
        return true
    end)
}

--[[ نظام السحب ]]
local dragging, dragStart, frameStart = false, nil, nil

local function IsEmptySpace(mousePos)
    local absPos = MainFrame.AbsolutePosition
    local absSize = MainFrame.AbsoluteSize
    
    -- التحقق من النقر داخل الإطار
    if mousePos.X < absPos.X or mousePos.X > absPos.X + absSize.X then return false end
    if mousePos.Y < absPos.Y or mousePos.Y > absPos.Y + absSize.Y then return false end
    
    -- التحقق من عدم النقر على عناصر التحكم
    for _, child in ipairs(MainFrame:GetDescendants()) do
        if child:IsA("GuiButton") or child:IsA("TextBox") then
            local cPos = child.AbsolutePosition
            local cSize = child.AbsoluteSize
            if mousePos.X >= cPos.X and mousePos.X <= cPos.X + cSize.X and
               mousePos.Y >= cPos.Y and mousePos.Y <= cPos.Y + cSize.Y then
                return false
            end
        end
    end
    
    return true
end

UIS.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        if IsEmptySpace(input.Position) then
            dragging = true
            dragStart = input.Position
            frameStart = MainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end
end)

UIS.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(
            frameStart.X.Scale,
            frameStart.X.Offset + delta.X,
            frameStart.Y.Scale,
            frameStart.Y.Offset + delta.Y
        )
    end
end)

--[[ توصيل الأحداث ]]
ControlBtn.MouseButton1Click:Connect(function()
    if Debounce then return end
    Debounce = true
    
    local target = FindPlayer(PlayerBox.Text)
    if target then
        ControlledPlayer = target
        PlayerBox.Text = target.Name
        ControlBtn.Text = "CONTROLLING: "..target.Name
        warn("Now controlling: "..target.Name)
    else
        warn("Player not found!")
    end
    
    Debounce = false
end)

JumpToggleHim.MouseButton1Click:Connect(function()
    if not ControlledPlayer then 
        warn("Please select a player first!")
        return 
    end
    
    local newState = not JumpToggleHim.Text:find("ON")
    local success = JumpSystem.Control(ControlledPlayer, newState)
    
    if success then
        JumpToggleHim.Text = newState and "DISABLE HIS JUMP [ON]" or "DISABLE HIS JUMP [OFF]"
        JumpToggleHim.BackgroundColor3 = newState and Color3.fromRGB(20, 90, 20) or Color3.fromRGB(90, 20, 20)
    else
        warn("Failed to control his jump!")
    end
end)

JumpToggleMe.MouseButton1Click:Connect(function()
    local newState = not JumpToggleMe.Text:find("ON")
    local success = JumpSystem.Control(Player, newState)
    
    if success then
        JumpToggleMe.Text = newState and "DISABLE MY JUMP [ON]" or "DISABLE MY JUMP [OFF]"
        JumpToggleMe.BackgroundColor3 = newState and Color3.fromRGB(20, 90, 20) or Color3.fromRGB(90, 20, 20)
    else
        warn("Failed to control your jump!")
    end
end)

AcceptHimBtn.MouseButton1Click:Connect(function()
    if not ControlledPlayer then 
        warn("Please select a player first!")
        return 
    end
    
    local success = AcceptSystem.ForceAccept(ControlledPlayer)
    if success then
        warn("Force accept sent successfully!")
        AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 0)
        task.delay(0.3, function()
            AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(20, 90, 20)
        end)
    else
        warn("Failed to force accept!")
        AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
        task.delay(0.3, function()
            AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(20, 90, 20)
        end)
    end
end)

-- حماية متقدمة ضد الحذف
local function AntiRemove()
    while true do
        if not GUI or not GUI.Parent then
            GUI = GUI:Clone()
            GUI.Parent = game:GetService("CoreGui")
            warn("GUI protection activated!")
        end
        task.wait(5)
    end
end

task.spawn(AntiRemove)

-- إظهار رسالة التحميل
warn("FRUIT CONTROL PRO v3.0 LOADED SUCCESSFULLY!")
