local function SelectLanguage()
    local selected
    for langName, _ in pairs(Languages) do
        if not selected then
            selected = langName
        end
    end
    return Languages[selected] or Languages["Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©"]
end

