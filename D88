local HS = game:GetService("HttpService")

--[[ نظام الحماية المتقدم ]]
local function SecureFunction(func)
    return function(...)
        local args = {...}
        local success, result = pcall(function()
            return func(unpack(args))
        end)
        if not success then
            warn("System Error:", result)
        end
        return success, result
    end
end

