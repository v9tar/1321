--[[
  سكربت J3OYX1 Tools V2
  يعمل على جميع المنفذين مع واجهة ذكية
--]]

local Player = game:GetService("Players").LocalPlayer
local TweenService = game:GetService("TweenService")

-- إعدادات الواجهة الأساسية
local GUI = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local ToggleBtn = Instance.new("TextButton")

-- تصميم الواجهة المدمجة
GUI.Name = "J3Tools"
GUI.ResetOnSpawn = false

MainFrame.Size = UDim2.new(0, 200, 0, 220)
MainFrame.Position = UDim2.new(1, -210, 0.5, -110)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0

ToggleBtn.Size = UDim2.new(0, 40, 0, 40)
ToggleBtn.Position = UDim2.new(1, -45, 0.5, -20)
ToggleBtn.Text = "☰"
ToggleBtn.ZIndex = 2

-- أنشاء الأزرار
local buttons = {
    {Name = "HideMap", Text = "إخفاء الماب", YPos = 10},
    {Name = "AFKMode", Text = "وضع AFK", YPos = 50},
    {Name = "Custom1", Text = "إجراء سري", YPos = 90},
    {Name = "Members", Text = "قائمة الأعضاء", YPos = 130},
}

local createdButtons = {}
for _, btn in ipairs(buttons) do
    local newBtn = Instance.new("TextButton")
    newBtn.Name = btn.Name
    newBtn.Size = UDim2.new(0, 180, 0, 30)
    newBtn.Position = UDim2.new(0, 10, 0, btn.YPos)
    newBtn.Text = btn.Text
    newBtn.TextSize = 14
    newBtn.BackgroundTransparency = 0.7
    newBtn.Parent = MainFrame
    table.insert(createdButtons, newBtn)
end

-- إضافة حقوق المطور
local Credit = Instance.new("TextLabel")
Credit.Text = "by: J3OYX1"
Credit.TextColor3 = Color3.fromRGB(150, 150, 150)
Credit.Size = UDim2.new(1, 0, 0, 20)
Credit.Position = UDim2.new(0, 0, 1, -25)
Credit.BackgroundTransparency = 1
Credit.Font = Enum.Font.SciFi
Credit.Parent = MainFrame

-- إعداد الحركات
local isMenuOpen = false
local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad)

local function ToggleMenu()
    isMenuOpen = not isMenuOpen
    local targetPosition = isMenuOpen and UDim2.new(1, -210, 0.5, -110) or UDim2.new(1, -50, 0.5, -110)
    TweenService:Create(MainFrame, tweenInfo, {Position = targetPosition}):Play()
end

-- وظائف الأزرار الأساسية
createdButtons[1].MouseButton1Click:Connect(function()
    for _, part in ipairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            part.Transparency = part.Transparency == 1 and 0 or 1
            part.CanCollide = not part.CanCollide
        end
    end
end)

createdButtons[2].MouseButton1Click:Connect(function()
    local humanoid = Player.Character:FindFirstChild("Humanoid")
    if humanoid then
        humanoid.WalkSpeed = 0
        wait(2)
        humanoid.WalkSpeed = 16
    end
end)

-- زر الإجراء السري (يمكن تخصيصه)
createdButtons[3].MouseButton1Click:Connect(function()
    game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, game.JobId)
end)

-- قائمة الأعضاء
createdButtons[4].MouseButton1Click:Connect(function()
    for _, player in ipairs(game.Players:GetPlayers()) do
        print("عضو: "..player.Name)
    end
end)

-- توصيل الأحداث
ToggleBtn.MouseButton1Click:Connect(ToggleMenu)

-- التهيئة النهائية
MainFrame.Parent = GUI
ToggleBtn.Parent = GUI
GUI.Parent = Player:WaitForChild("PlayerGui")

-- إختصار لوحة المفاتيح (F للفتح/القفل)
game:GetService("UserInputService").InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F then
        ToggleMenu()
    end
end)
