Donate10Btn.BackgroundColor3 = Color3.fromRGB(80, 0, 120)
Donate10Btn.TextColor3 = Color3.new(1, 1, 1)
Donate10Btn.Font = Enum.Font.GothamBold
Donate10Btn.TextSize = 12
Donate10Btn.Parent = MainFrame

-- قسم الأداء (مصغر)
local PerfLabel = Instance.new("TextLabel")
PerfLabel.Text = ArabicText.Performance
PerfLabel.Size = UDim2.new(0, 240, 0, 20)
PerfLabel.Position = UDim2.new(0.5, -120, 0.75, 0)
