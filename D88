--[[
  سكربت D88 الإحترافي - الإصدار النهائي
  المميزات:
  1. دعم متعدد اللغات (اختيار عند التشغيل)
  2. عرض FPS و Ping مباشرة
  3. واجهة قابلة للسحب مع زر ذكي
  4. تحكم كامل في المابات
  5. نظام تبرعات مدمج
]]

-- خدمات اللعبة
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- إعدادات اللغة
local Languages = {
    ["العربية"] = {
        Title = "D88 - التحكم الشامل",
        MapControl = "التحكم في المابات",
        DonateTitle = "ادعم التطوير",
        Donate5 = "تبرع 5 💙",
        Donate10 = "تبرع 10 💎",
        CloseUI = "▲ إغلاق ▲",
        OpenUI = "▼ فتح ▼"
    },
    ["English"] = {
        Title = "D88 - Ultimate Control",
        MapControl = "Map Control",
        DonateTitle = "Support Development",
        Donate5 = "Donate 5 💙",
        Donate10 = "Donate 10 💎",
        CloseUI = "▲ Close ▲",
        OpenUI = "▼ Open ▼"
    },
    ["Español"] = {
        Title = "D88 - Control Total",
        MapControl = "Control de Mapas",
        DonateTitle = "Apoya el Desarrollo",
        Donate5 = "Donar 5 💙",
        Donate10 = "Donar 10 💎",
        CloseUI = "▲ Cerrar ▲",
        OpenUI = "▼ Abrir ▼"
    }
}

-- اختيار اللغة عند التشغيل
local function SelectLanguage()
    local selected
    for langName, _ in pairs(Languages) do
        if not selected then
            selected = langName
        end
    end
    return Languages[selected] or Languages["العربية"]
end

local L = SelectLanguage()

-- إنشاء واجهة متطورة
local Gui = Instance.new("ScreenGui")
Gui.Name = "D88_Ultimate"
Gui.Parent = game:GetService("CoreGui")

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = Gui
MainFrame.Size = UDim2.new(0, 350, 0, 450)
MainFrame.Position = UDim2.new(0.5, -175, 0.5, -225)
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 25, 35)
MainFrame.BackgroundTransparency = 0.1
MainFrame.Active = true
MainFrame.Draggable = true

-- تصميم الواجهة
