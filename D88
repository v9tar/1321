--[[
  سكربت D88 المتميز - النسخة العربية
  المميزات:
  1. واجهة عربية 100% بتصميم مظلم
  2. حجم مضغوط مع إمكانية التنقل
  3. تحكم كامل في المابات
  4. عرض أداء اللعبة (FPS/Ping)
  5. نظام تبرعات مدمج
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- النصوص العربية
local ArabicText = {
    MainTitle = "سكربت D88 المطور",
    MapControl = "التحكم في المابات",
    DonateTitle = "ادعم المطور",
    Donate5 = "تبرع 5 ريال 💙",
    Donate10 = "تبرع 10 ريال 💎",
    CloseUI = "إغلاق القائمة ▲",
    OpenUI = "فتح القائمة ▼",
    Performance = "أداء اللعبة",
    FPS = "معدل الإطارات: ",
    Ping = "سرعة الاتصال: ",
    Loading = "جاري التحميل..."
}

-- إنشاء واجهة مظلمة صغيرة
local Gui = Instance.new("ScreenGui")
Gui.Name = "D88_Arabic"
Gui.Parent = game:GetService("CoreGui")

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = Gui
MainFrame.Size = UDim2.new(0, 280, 0, 350) -- حجم أصغر
MainFrame.Position = UDim2.new(0.5, -140, 0.5, -175)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20) -- لون أغمق
MainFrame.BackgroundTransparency = 0.05
MainFrame.Active = true
MainFrame.Draggable = true

-- زوايا مدورة
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 8)
UICorner.Parent = MainFrame

-- إطار الظل
local UIStroke = Instance.new("UIStroke")
UIStroke.Color = Color3.fromRGB(50, 50, 80)
UIStroke.Thickness = 2
UIStroke.Parent = MainFrame

-- العناصر الرئيسية
local Title = Instance.new("TextLabel")
Title.Text = ArabicText.MainTitle
Title.Size = UDim2.new(0, 250, 0, 40)
Title.Position = UDim2.new(0.5, -125, 0, 5)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.BackgroundTransparency = 1
Title.TextSize = 18
Title.Parent = MainFrame

-- زر التحكم في المابات (مصغر)
local MapControlBtn = Instance.new("TextButton")
MapControlBtn.Text = ArabicText.MapControl
MapControlBtn.Size = UDim2.new(0, 240, 0, 45) -- حجم أصغر
MapControlBtn.Position = UDim2.new(0.5, -120, 0.15, 0)
MapControlBtn.BackgroundColor3 = Color3.fromRGB(30, 80, 150)
MapControlBtn.TextColor3 = Color3.new(1, 1, 1)
MapControlBtn.Font = Enum.Font.GothamBold
MapControlBtn.TextSize = 14
MapControlBtn.Parent = MainFrame

-- قسم التبرعات (مصغر)
local DonateLabel = Instance.new("TextLabel")
DonateLabel.Text = ArabicText.DonateTitle
DonateLabel.Size = UDim2.new(0, 240, 0, 25)
DonateLabel.Position = UDim2.new(0.5, -120, 0.45, 0)
DonateLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
DonateLabel.Font = Enum.Font.Gotham
