--[[ نظام التحكم الأساسي ]]
local ControlledPlayer = nil
local Debounce = false

-- نظام البحث المحسن
local function FindPlayer(name)
    if #name < 3 then return nil end
    
    name = name:lower():gsub("[^%w]", "")
    local closestPlayer, minDiff = nil, math.huge
    
    for _, player in pairs(game:GetService("Players"):GetPlayers()) do
        if player ~= Player then
            local playerName = player.Name:lower():gsub("[^%w]", "")
            if playerName:find(name) then
                local diff = math.abs(#playerName - #name)
                if diff < minDiff then
                    closestPlayer = player
                    minDiff = diff
                end
            end
        end
    end
    
    return closestPlayer
end

-- نظام التحكم في القفز (إصلاح كامل)
local JumpSystem = {
    States = {},
    
    Toggle = SecureExecute(function(target, enable)
        if not target or not target.Character then return false end
        
        local humanoid = target.Character:FindFirstChildOfClass("Humanoid")
        if not humanoid then return false end
        
        if enable then
            -- تمكين القفز
            if JumpSystem.States[target] then
                humanoid.JumpPower = JumpSystem.States[target].JumpPower or 50
                humanoid.WalkSpeed = JumpSystem.States[target].WalkSpeed or 16
                JumpSystem.States[target] = nil
            end
        else
            -- تعطيل القفز
            if not JumpSystem.States[target] then
                JumpSystem.States[target] = {
                    JumpPower = humanoid.JumpPower,
                    WalkSpeed = humanoid.WalkSpeed
                }
            end
            humanoid.JumpPower = 0
            humanoid.WalkSpeed = 16
        end
        
        return true
    end)
}

-- نظام القبول الإجباري (إصلاح كامل)
local AcceptSystem = {
    ForceAccept = SecureExecute(function()
        -- البحث في الواجهة أولاً
        for _, button in pairs(game:GetService("CoreGui"):GetDescendants()) do
            if button:IsA("TextButton") and button.Text:lower():find("accept") then
                for _, connection in pairs(getconnections(button.MouseButton1Click)) do
                    connection:Fire()
                    return true
                end
            end
        end
        
        -- البحث في الأحداث البعيدة
        for _, remote in pairs(game:GetService("ReplicatedStorage"):GetDescendants()) do
            if remote:IsA("RemoteEvent") and remote.Name:lower():find("accept") then
                remote:FireServer(true)
                return true
            end
        end
        
        return false
    end)
}

--[[ نظام السحب ]]
local dragging, dragStart, frameStart = false, nil, nil

local function IsEmptySpace(mousePos)
    local absPos = MainFrame.AbsolutePosition
    local absSize = MainFrame.AbsoluteSize
    
    if mousePos.X < absPos.X or mousePos.X > absPos.X + absSize.X then return false end
    if mousePos.Y < absPos.Y or mousePos.Y > absPos.Y + absSize.Y then return false end
    
    for _, child in ipairs(MainFrame:GetDescendants()) do
        if child:IsA("GuiButton") or child:IsA("TextBox") then
            local cPos = child.AbsolutePosition
            local cSize = child.AbsoluteSize
            if mousePos.X >= cPos.X and mousePos.X <= cPos.X + cSize.X and
               mousePos.Y >= cPos.Y and mousePos.Y <= cPos.Y + cSize.Y then
                return false
            end
        end
    end
    
    return true
end

UIS.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 and IsEmptySpace(input.Position) then
        dragging = true
        dragStart = input.Position
        frameStart = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

UIS.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(
            frameStart.X.Scale,
            frameStart.X.Offset + delta.X,
            frameStart.Y.Scale,
            frameStart.Y.Offset + delta.Y
        )
    end
end)

--[[ توصيل الأحداث ]]
ControlBtn.MouseButton1Click:Connect(function()
    if Debounce then return end
    Debounce = true
    
    local target = FindPlayer(PlayerBox.Text)
    if target then
        ControlledPlayer = target
        PlayerBox.Text = target.Name
        ControlBtn.Text = "CONTROLLING: "..string.sub(target.Name, 1, 12)
    else
        warn("Player not found!")
    end
    
    Debounce = false
end)

JumpToggleHim.MouseButton1Click:Connect(function()
    if not ControlledPlayer then 
        warn("Select player first!")
        return 
    end
    
    local currentState = JumpToggleHim.Text:find("DISABLED")
    local success = JumpSystem.Toggle(ControlledPlayer, currentState)
    
    if success then
        if currentState then
            JumpToggleHim.Text = "HIS JUMP: ENABLED"
            JumpToggleHim.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
        else
            JumpToggleHim.Text = "HIS JUMP: DISABLED"
            JumpToggleHim.BackgroundColor3 = Color3.fromRGB(120, 60, 60)
        end
    end
end)

JumpToggleMe.MouseButton1Click:Connect(function()
    local currentState = JumpToggleMe.Text:find("DISABLED")
    local success = JumpSystem.Toggle(Player, currentState)
    
    if success then
        if currentState then
            JumpToggleMe.Text = "MY JUMP: ENABLED"
            JumpToggleMe.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
        else
            JumpToggleMe.Text = "MY JUMP: DISABLED"
            JumpToggleMe.BackgroundColor3 = Color3.fromRGB(120, 60, 60)
        end
    end
end)

AcceptHimBtn.MouseButton1Click:Connect(function()
    local success = AcceptSystem.ForceAccept()
    if success then
        AcceptHimBtn.Text = "ACCEPT SENT!"
        AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
        task.delay(1, function()
            AcceptHimBtn.Text = "FORCE ACCEPT"
            AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 120)
        end)
    else
        AcceptHimBtn.Text = "FAILED!"
        AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(120, 60, 60)
        task.delay(1, function()
            AcceptHimBtn.Text = "FORCE ACCEPT"
            AcceptHimBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 120)
        end)
    end
end)

-- حماية متقدمة
RS.Heartbeat:Connect(function()
    if not GUI or not GUI.Parent then
        GUI = GUI:Clone()
        GUI.Parent = game:GetService("CoreGui")
    end
end)

warn("FRUIT MASTER v4.0 LOADED SUCCESSFULLY!")
