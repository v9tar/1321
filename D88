PerfLabel.TextSize = 12
PerfLabel.Parent = MainFrame

local FPSLabel = Instance.new("TextLabel")
FPSLabel.Text = ArabicText.FPS .. "0"
FPSLabel.Size = UDim2.new(0, 110, 0, 25)
FPSLabel.Position = UDim2.new(0.3, -55, 0.82, 0)
FPSLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
FPSLabel.Font = Enum.Font.GothamBold
FPSLabel.BackgroundTransparency = 1
FPSLabel.TextXAlignment = Enum.TextXAlignment.Left
FPSLabel.TextSize = 12
FPSLabel.Parent = MainFrame

local PingLabel = Instance.new("TextLabel")
PingLabel.Text = ArabicText.Ping .. "0ms"
PingLabel.Size = UDim2.new(0, 110, 0, 25)
PingLabel.Position = UDim2.new(0.7, -55, 0.82, 0)
PingLabel.TextColor3 = Color3.fromRGB(0, 200, 255)
PingLabel.Font = Enum.Font.GothamBold
PingLabel.BackgroundTransparency = 1
PingLabel.TextXAlignment = Enum.TextXAlignment.Left
PingLabel.TextSize = 12
PingLabel.Parent = MainFrame

-- زر التنقل الذكي
local ToggleUI = Instance.new("TextButton")
ToggleUI.Name = "ToggleUI"
ToggleUI.Size = UDim2.new(0, 120, 0, 30) -- حجم أصغر
ToggleUI.Position = UDim2.new(0.5, -60, 1, -40)
ToggleUI.Text = ArabicText.CloseUI
ToggleUI.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
ToggleUI.TextColor3 = Color3.new(1, 1, 1)
ToggleUI.Font = Enum.Font.GothamBold
ToggleUI.TextSize = 12
ToggleUI.Parent = Gui

-- تأثيرات التمرير
local function ButtonHoverEffect(btn)
    btn.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(btn, TweenInfo.new(0.15), {BackgroundTransparency = 0.2}):Play()
    end)
    btn.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(btn, TweenInfo.new(0.15), {BackgroundTransparency = 0}):Play()
    end)
end

-- تطبيق التأثير على الأزرار
for _, btn in ipairs(MainFrame:GetChildren()) do
    if btn:IsA("TextButton") then
        ButtonHoverEffect(btn)
    end
end
ButtonHoverEffect(ToggleUI)

-- تحديث أداء اللعبة
local function UpdatePerformance()
    local fps = math.floor(1 / RunService.RenderStepped:Wait())
    local ping = math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue())
    
    FPSLabel.Text = ArabicText.FPS .. fps
    PingLabel.Text = ArabicText.Ping .. ping .. "ms"
    
    -- تغيير ألوان حسب الأداء
    FPSLabel.TextColor3 = fps < 30 and Color3.fromRGB(255, 50, 50) or fps < 60 and Color3.fromRGB(255, 165, 0) or Color3.fromRGB(0, 255, 0)
    PingLabel.TextColor3 = ping > 300 and Color3.fromRGB(255, 50, 50) or ping > 150 and Color3.fromRGB(255, 165, 0) or Color3.fromRGB(0, 200, 255)
end

-- تبديل القائمة
local function ToggleUIVisibility()
    MainFrame.Visible = not MainFrame.Visible
    ToggleUI.Text = MainFrame.Visible and ArabicText.CloseUI or ArabicText.OpenUI
end

-- أحداث الأزرار
ToggleUI.MouseButton1Click:Connect(ToggleUIVisibility)

-- تحديث الأداء
RunService.RenderStepped:Connect(UpdatePerformance)

-- إشعار التحميل
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = ArabicText.MainTitle,
    Text = ArabicText.Loading,
    Duration = 2
})

print("تم تحميل السكربت بنجاح - النسخة العربية المطورة")
